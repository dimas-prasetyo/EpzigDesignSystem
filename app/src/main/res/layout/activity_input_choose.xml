                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginVertical="@dimen/margin_small"
                app:title="Input Dialog Single Select"
                app:hint="Silahkan Pilih"
                app:isMultipleSelect="false"/>

            <com.dimasbintang.design_system.dropdown.InputDropdown
                android:id="@+id/inputDialogMultiple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginVertical="@dimen/margin_small"
                app:title="Input Dialog Multiple Select"
                app:hint="Silahkan Pilih"
                app:isMultipleSelect="true"/>

            <com.dimasbintang.design_system.dropdown.InputDropdown
                android:id="@+id/inputBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginVertical="@dimen/margin_small"
                app:title="Input Bottom Sheet Single Select"
                app:hint="Silahkan Pilih"
                app:isMultipleSelect="false"/>

            <com.dimasbintang.design_system.dropdown.InputDropdown
