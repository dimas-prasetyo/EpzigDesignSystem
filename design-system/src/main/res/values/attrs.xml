<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextInputLayout">

        <attr name="title" format="string" />
        <attr name="hint" format="string" />
        <attr name="styleSize" format="string" />

        <!-- Atribut untuk afiks teks  -->
        <attr name="prefixText" format="string" />
        <attr name="suffixText" format="string" />
        <attr name="affixTint" format="color"/>

        <!-- Atribut untuk Stepper -->
        <attr name="supportsDecimal" format="boolean"/>
        <attr name="decimalSeparator" format="string" />

        <!-- Atribut untuk teks area  -->
        <attr name="maxLines" format="integer"/>

        <!-- Atribut untuk input dropdown  -->
        <attr name="isMultipleSelect" format="boolean"/>

        <!-- Atribut untuk input icon  -->
        <attr name="iconClickable" format="boolean"/>
    </declare-styleable>
</resources>